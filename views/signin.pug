extends ./layout.pug

block content
	div(class='container' style='margin-top: 50px;')
		div(class='col-md-6 col-md-offset-3')
			div(class='panel panel-info')
				div(class='panel-heading')
					h4.text-center Iniciar Sesion
				div(class='panel-body')
					if (err)
						div.alert.alert-danger #{err}
					form(method='POST')
						div(class='form-group')
							label(for='email') Email
							input(type='text',name='email',placeholder='Correo Electronico',id='email' class='form-control')
						div(class='form-group')
							label(for='pass') Contraseña
							input(type='password',name='password',placeholder='Contraseña',id='pass' class='form-control')
						div(class='row')
							div(class='col-md-6')
								input(type='submit' class='btn btn-info btn-block' value='Iniciar Sesion')
							div(class='col-md-6')
								a(href='/signup' class='btn btn-info btn-block') No tienes cuenta?

					